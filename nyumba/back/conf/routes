# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.PersonController.index()
POST    /person                     controllers.PersonController.addPerson()
GET     /persons                    controllers.PersonController.getPersons

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

POST    /building                   controllers.BuildingController.addBuilding()
GET     /buildings                  controllers.BuildingController.getBuildings

POST    /updateRooms                controllers.RoomController.updateRooms()
#POST    /room                      controllers.RoomController.addRoom()
GET     /getRooms                   controllers.RoomController.getRooms
GET     /roomDetails/:id            controllers.RoomController.getRoomDetails(id: Long)
POST    /updateRoomDetails          controllers.RoomController.updateRoomDetails()

